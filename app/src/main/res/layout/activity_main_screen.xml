<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micky.sharemywod.MainScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share my WoD"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        android:layout_above="@+id/postButton"
        android:paddingBottom="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share a workout"
        android:onClick="postWorkout"
        android:layout_centerInParent="true"
        android:id="@+id/postButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View workouts"
        android:layout_centerInParent="true"
        android:layout_below="@+id/postButton"
        android:onClick="viewWorkouts"
        android:paddingTop="15dp"
        android:id="@+id/viewButton"
        />

</RelativeLayout>
